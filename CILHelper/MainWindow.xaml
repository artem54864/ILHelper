<Window x:Class="CILHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <ribbon:Ribbon x:Name="IlHelperRibbon">
            <ribbon:Ribbon.QuickAccessToolBar>
                <ribbon:RibbonQuickAccessToolBar>
                    <ribbon:RibbonButton x:Name="ButtonQ1"
               SmallImageSource="Resources/Images/Smallicon.png"
               Label="ButtonQ1" />
                    <ribbon:RibbonButton x:Name="ButtonQ2"
               SmallImageSource="Resources/Images/Largeicon.png"
               Label="ButtonQ2" />
                    <ribbon:RibbonButton x:Name="ButtonQ3"
               SmallImageSource="Resources/Images/SmallIconOpened.jpg"
               Label="ButtonQ3" />
                </ribbon:RibbonQuickAccessToolBar>
            </ribbon:Ribbon.QuickAccessToolBar>
            
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:RibbonApplicationMenu SmallImageSource="Resources/Images/SmallIcon.png" LargeImageSource="Resources/Images/Largeicon.png">
                    <ribbon:RibbonApplicationMenuItem Header="Hello _Ribbon"
                       x:Name="MenuItem1"
                       ImageSource="Resources/Images/LargeIcon.png"/>
                </ribbon:RibbonApplicationMenu>
            </ribbon:Ribbon.ApplicationMenu>

            <ribbon:RibbonTab x:Name="HomeTab"
           Header="Home">
                <ribbon:RibbonGroup x:Name="Group1" 
              Header="Group1">
                    <ribbon:RibbonButton x:Name="Button1"
                 LargeImageSource="Resources/Images/Largeicon.png"
                 Label="Button1" />
                    <ribbon:RibbonButton x:Name="Button2"
                 SmallImageSource="Resources/Images/Largeicon.png"
                 Label="Button2" />
                    <ribbon:RibbonButton x:Name="Button3"
                 SmallImageSource="Resources/Images/Smallicon.png"
                 Label="Button3" />
                    <ribbon:RibbonButton x:Name="Button4"
                 SmallImageSource="Resources/Images/Smallicon.png"
                 Label="Button4" />

                </ribbon:RibbonGroup>

            </ribbon:RibbonTab>
        </ribbon:Ribbon>
    </Grid>
</Window>
